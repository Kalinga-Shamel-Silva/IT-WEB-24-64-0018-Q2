@model StudentManager.Pages.Courses.DeleteModel

@{
    ViewData["Title"] = "Delete Course";
}

<h1 class="sub-page-heading">Delete</h1>

<h3 style="color:red;">Are you sure you want to delete this Course?</h3>
<div>
    <hr />
    <dl class="row mt-5">
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.Course.Name) *@
            <H>Course Name</H>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.Course.Lecturer_Name) *@
            <H>Lecturer Name</H>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Lecturer_Name)
