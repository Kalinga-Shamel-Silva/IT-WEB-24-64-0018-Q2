@page
@model StudentManager.Pages.Students.EditModel

@{
    ViewData["Title"] = "Edit Student";
}

<h1 class="sub-page-heading">Edit student details</h1>

<hr />
<div class="row mt-5">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.Id" />
            <div class="form-group">
                @* <label asp-for="Student.Name" class="control-label"></label> *@
                <h5 class="textbox-label">| Student Name</h5>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                @* <label asp-for="Student.City" class="control-label"></label> *@
                <h5 class="textbox-label">| City</h5>
                <input asp-for="Student.City" class="form-control" />
                <span asp-validation-for="Student.City" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                @* <label asp-for="Student.Course" class="control-label"></label> *@
                <h5 class="textbox-label">| Enrolled Course</h5>
                <input asp-for="Student.Course" class="form-control" />
                <span asp-validation-for="Student.Course" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Index">↤ Back </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
